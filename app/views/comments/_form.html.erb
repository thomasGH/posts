<%= form_for([@post, @comment]) do |f| %>
  <%= render 'common/errors', object: @comment %>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, size: "60x6" %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit', action: @comment.new_record? ? t('common.create') : t('common.update')) %>
  </div>
<% end %>
