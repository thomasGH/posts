<%= form_for(@post) do |f| %>
  <%= render 'common/errors', object: @post %>

  <div class="field">
    <%= f.label "Заголовок" %><br>
    <%= f.text_field :title, size: "60" %>
  </div>
  <div class="field">
    <%= f.label "Содержание" %><br>
    <%= f.text_area :body, size: "60x12" %>
  </div>
  <div class="field">
    <%= f.label :category_ids, 'Категории' %><br>
    <%= f.collection_select :category_ids, Category.all, :id, :name, {}, { multiple: true, size: "10" } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
