<%= @post.user.email %>

<h1><%= @post.title %></h1>

<div class="container">
  <%= render 'categories/category' %>
</div>

<p><%= @post.body %></p>

<hr>
  <% if user_signed_in? && current_user.id == @post.user.id %>
    <p><%= link_to 'Редактировать', edit_post_path(@post) %> <%= link_to 'Удалить', @post, method: :delete, data: { confirm: 'Вы уверены?' } %></p>
  <% end %>

<% unless @post.comments.empty? %>
  <h3>Комментарии</h3>

  <%= render @post.comments %>

<% else %>
  <p>Комментариев пока нет. Оставьте комментарий первым</p>
<% end %>

<%= render 'comments/form' %>

<%= link_to 'Просмотр', edit_post_path(@post) %> |
<%= link_to 'Назад', posts_path %>
